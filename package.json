{
  "name": "grove",
  "version": "0.1.8",
  "description": "Multi-directory worktree terminal manager",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build",
    "postinstall": "electron-rebuild -f -w node-pty",
    "dist": "vite build && electron-builder --publish never",
    "release": "vite build && electron-builder --publish always"
  },
  "build": {
    "appId": "com.djatjdwns28.grove",
    "productName": "Grove",
    "files": [
      "dist/index.html",
      "dist/assets/**/*",
      "electron/**/*"
    ],
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": ["nsis"],
      "icon": "build/icon.png"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "build/icon.png",
      "category": "Development"
    },
    "publish": {
      "provider": "github",
      "owner": "djatjdwns28",
      "repo": "grove"
    }
  },
  "dependencies": {
    "electron-updater": "^6.8.3",
    "node-pty": "^1.0.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.0",
    "@vitejs/plugin-react": "^4.3.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-search": "^0.16.0",
    "@xterm/addon-unicode11": "^0.9.0",
    "@xterm/addon-web-links": "^0.12.0",
    "@xterm/xterm": "^5.5.0",
    "concurrently": "^8.2.0",
    "electron": "^32.0.0",
    "electron-builder": "^26.8.1",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "uuid": "^9.0.0",
    "vite": "^5.4.0",
    "wait-on": "^7.2.0",
    "zustand": "^4.5.0"
  }
}
